<h2>Document publique</h2>

{% if pagination.getTotalItemCount > 0 %}

    <div class="count">
        Nombre de document: {{ pagination.getTotalItemCount }}
    </div>
    <table>
        <tr>
            {# sorting of properties based on query components #}
            <th>{{ knp_pagination_sortable(pagination, 'Titre', 'd.titre') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Date', 'd.creation_date') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'filename', 'd.filename') }}</th>
            <th>Propri√©taire</th>
            <th></th>
        </tr>




        {# table body #}
        {% for d in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ d.titre }}</td>
                <td>{{ d.getCreationDate()|date('d/m/Y H:i:s') }}</td>
                <td>{{ d.filename }}</td>
                <td>{{ d.proprietaire }}</td>
                <td>
                    <a type="button" class="btn btn-info"
                       href="{{ absolute_url(path('document_information', { "id": d.id })) }}">
                        Information
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% else %}

    Aucun document publique n'est disponible

{% endif %}

